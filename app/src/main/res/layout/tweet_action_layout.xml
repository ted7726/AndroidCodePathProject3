<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/transparent"
    android:id="@+id/tweetActionView">
    <ImageButton
        android:id="@+id/ibReplyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:paddingLeft="5dp"
        android:src="@drawable/ic_reply"/>

    <ImageButton
        android:id="@+id/ibRetweetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ibReplyButton"
        android:paddingLeft="25dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_retweet"/>
    <TextView
        android:id="@+id/tvRetweetCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ibRetweetButton"
        android:layout_alignTop="@+id/ibRetweetButton"
        android:layout_alignBottom="@+id/ibRetweetButton"
        android:gravity="center_vertical"
        android:textColor="#7788AA"
        android:text="123"
        />


    <ImageButton
        android:id="@+id/ibFavoriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvRetweetCount"
        android:paddingLeft="25dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_like"/>

    <TextView
        android:id="@+id/tvFavoriteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ibFavoriteButton"
        android:layout_alignTop="@+id/ibFavoriteButton"
        android:layout_alignBottom="@+id/ibFavoriteButton"
        android:gravity="center_vertical"
        android:textColor="#7788AA"
        android:text="234"/>

</RelativeLayout>