<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.codepath.apps.twitterapp.Activities.ProfileActivity"
    android:theme="@style/AppTheme.PopupOverlay">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/clProfileCoordinatorLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/ablProfileAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:elevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">
                        <ImageView
                            android:id="@+id/ivCoverPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"

                            />
                        <ImageView
                            android:id="@+id/ivCoverBlurredPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            />

                        <com.makeramen.roundedimageview.RoundedImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:riv_corner_radius="5dp"
                            android:id="@+id/ivUserProfile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@id/ivCoverPhoto"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="-24dp"
                            android:background="@color/white"
                            android:padding="2dp"
                            android:scaleType="fitXY"
                            android:adjustViewBounds="true"
                            />
                        <TextView
                            android:id="@+id/tvProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/ivUserProfile"
                            android:layout_below="@id/ivUserProfile"
                            android:padding="2dp"
                            android:text="username"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@string/font_sans_serif_medium"
                            />
                        <TextView
                            android:id="@+id/tvProfileUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/ivUserProfile"
                            android:layout_below="@id/tvProfileName"
                            android:padding="2dp"
                            android:text="\@username"
                            android:textSize="12sp"
                            android:textColor="#8899BB"
                            android:fontFamily="@string/font_sans_serif_regular"
                            />
                        <TextView
                            android:id="@+id/tvProfileDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvProfileUsername"
                            android:layout_alignLeft="@id/ivUserProfile"
                            android:transitionName="TweetProfile"
                            android:padding="2dp"
                            android:text="Sharing things I''m learning through my foundation work and other interests..."
                            android:textSize="12sp"
                            android:textColor="#112233"
                            android:fontFamily="@string/font_sans_serif_regular"
                            />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvProfileDescription"
                            android:layout_alignLeft="@id/ivUserProfile"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/tvTweetsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="4"
                                android:textSize="12sp"
                                android:textColor="#112233"
                                android:fontFamily="@string/font_sans_serif_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="TWEETS"
                                android:textSize="11sp"
                                android:textColor="#8899BB"
                                android:fontFamily="@string/font_sans_serif_regular"
                                />
                            <TextView
                                android:id="@+id/tvFollowersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:padding="2dp"
                                android:text="5"
                                android:textSize="12sp"
                                android:textColor="#112233"
                                android:fontFamily="@string/font_sans_serif_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="FOLLOWERS"
                                android:textSize="11sp"
                                android:textColor="#8899BB"
                                android:fontFamily="@string/font_sans_serif_regular"
                                />
                            <TextView
                                android:id="@+id/tvFollowingsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:padding="2dp"
                                android:text="4"
                                android:textSize="12sp"
                                android:textColor="#112233"
                                android:fontFamily="@string/font_sans_serif_regular"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="FOLLOWING"
                                android:textSize="11sp"
                                android:textColor="#8899BB"
                                android:fontFamily="@string/font_sans_serif_regular"
                                />
                        </LinearLayout>
                    </RelativeLayout>

        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvProfile"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v7.widget.RecyclerView>
    </android.support.design.widget.CoordinatorLayout>




</RelativeLayout>
